<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="end"
    android:paddingVertical="4dp">

    <!-- Sender's Name for Group Chat (in case user wants to display their own name as well) -->
    <TextView
        android:id="@+id/textViewSenderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="2dp"/>

    <!-- Sent Message -->
    <TextView
        android:id="@+id/textViewSentMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sent_message_bg"
        android:padding="10dp"
        android:text="Sent message"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <!-- Timestamp and Status -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewSentTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00 PM"
            android:textSize="12sp"
            android:textColor="#888888"/>

        <TextView
            android:id="@+id/textViewMessageStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sent"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
