<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/forgot_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:text="Forgot Password"
            android:textColor="@color/design_default_color_primary"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/forgot_password_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgot_password_title"
            android:layout_marginBottom="24dp"
            android:text="Enter your netId."
            android:textAlignment="center"
            android:textColor="@color/design_default_color_on_surface"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/email_otp_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgot_password_description"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Enter netId"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="@color/design_default_color_on_surface"
            android:textColorHint="@color/design_default_color_on_surface" />

        <Button
            android:id="@+id/verify_otp_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_otp_input"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/design_default_color_primary"
            android:padding="16dp"
            android:text="Verify NetId"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/verify_otp_button"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Enter New Password"
            android:inputType="textPassword"
            android:padding="16dp"
            android:visibility="gone"
            android:textColor="@color/design_default_color_on_surface"
            android:textColorHint="@color/design_default_color_on_surface" />

        <EditText
            android:id="@+id/confirm_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_input"
            android:layout_marginBottom="24dp"
            android:background="@drawable/edit_text_background"
            android:hint="Confirm New Password"
            android:inputType="textPassword"
            android:padding="16dp"
            android:visibility="gone"
            android:textColor="@color/design_default_color_on_surface"
            android:textColorHint="@color/design_default_color_on_surface" />

        <Button
            android:id="@+id/update_profile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/confirm_password_input"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/design_default_color_primary"
            android:padding="16dp"
            android:text="Update Profile"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/update_profile_button"
            android:backgroundTint="@color/design_default_color_secondary"
            android:padding="16dp"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>
</ScrollView>
