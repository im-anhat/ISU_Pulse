<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/announcementTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Announcements"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextAnnouncementContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write your announcement here"
        android:minHeight="48dp"
        android:padding="8dp" />

    <Button
        android:id="@+id/buttonSubmitAnnouncement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Announcement" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAnnouncements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp" />
</LinearLayout>
