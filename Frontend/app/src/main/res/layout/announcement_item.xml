<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/announcement_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/announcement_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/announcement_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:textSize="14sp" />

    <!-- Horizontal layout for Update and Delete buttons, initially hidden -->
    <LinearLayout
        android:id="@+id/teacher_actions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:visibility="gone"> <!-- Hidden by default -->

        <!-- Update Button -->
        <Button
            android:id="@+id/button_update_announcement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update"
            android:backgroundTint="@color/teal_200"
            android:textColor="@android:color/white"
            android:layout_marginEnd="4dp" />

        <!-- Delete Button -->
        <Button
            android:id="@+id/button_delete_announcement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white"
            android:layout_marginStart="4dp" />
    </LinearLayout>
</LinearLayout>
