<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/design_default_color_surface" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/design_default_color_on_surface" />
        </shape>
    </item>
    <item android:gravity="end|center_vertical" android:right="8dp">
        <layer-list>
            <item android:width="12dp" android:height="12dp" android:gravity="center">
                <rotate android:fromDegrees="45" android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/design_default_color_on_surface" />
                        <size android:width="8dp" android:height="2dp" />
                    </shape>
                </rotate>
            </item>
            <item android:width="12dp" android:height="12dp" android:gravity="center" android:top="5dp">
                <rotate android:fromDegrees="-45" android:toDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/design_default_color_on_surface" />
                        <size android:width="8dp" android:height="2dp" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
</layer-list>
